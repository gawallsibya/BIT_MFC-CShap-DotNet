<Window x:Class="WindowDemo.DialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DialogWindow" Height="219" Width="439" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid Height="245">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67*" />
            <ColumnDefinition Width="211*" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Height="23" Margin="98,118,0,0" Name="okButton" VerticalAlignment="Top" HorizontalAlignment="Left" Width="76.5" Click="okButton_Click">OK</Button>
        <Label Grid.Column="1" Height="28" Margin="15,36,0,0" Name="lblName" VerticalAlignment="Top" HorizontalAlignment="Left" Width="77">이  름</Label>
        <Label Grid.Column="1" Height="28" Margin="15,81,0,0" Name="lblAddress" VerticalAlignment="Top" HorizontalAlignment="Left" Width="77">주  소</Label>
        <TextBox Grid.Column="1" Height="23" Margin="98,36,0,0" Name="textName" VerticalAlignment="Top" HorizontalAlignment="Left" Width="170.5" />
        <TextBox Grid.Column="1" Height="23" Margin="98,81,0,0" Name="textAddress" VerticalAlignment="Top" HorizontalAlignment="Left" Width="186.5" />
        <Button Height="23" Margin="0,118,48,0" Name="cancerButton" VerticalAlignment="Top" Grid.Column="1" HorizontalAlignment="Right" Width="76.5" Click="cancerButton_Click">Cancer</Button>
    </Grid>
</Window>
