<Window x:Class="GraphicDemo.Window4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window4" Height="376" Width="649">
    <Canvas Width="597">
        <Path Stroke="Blue" StrokeThickness="1" Canvas.Left="44" Canvas.Top="38" Height="192" Width="166">
            <Path.Data>
                <GeometryGroup>
                    <LineGeometry EndPoint="0,20" StartPoint="120,140"/>
                    <EllipseGeometry RadiusX="70" RadiusY="70" Center="70,70"/>
                    <RectangleGeometry Rect="30,30,130,150"/>
                </GeometryGroup>
            </Path.Data>
        </Path>
        <Image Source="flower.png"  Canvas.Left="258" Canvas.Top="30" Height="200" Width="200" MouseDown="Image_MouseDown">
            <Image.Clip>
                <EllipseGeometry RadiusX="100" RadiusY="100" Center="100,100"></EllipseGeometry>
            </Image.Clip>
        </Image>

    </Canvas>
</Window>
