<Window x:Class="WPFControls.ComboboxSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ComboBoxSample" Height="226" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="146*" />
            <ColumnDefinition Width="132*" />
        </Grid.ColumnDefinitions>
        <ComboBox Height="23" Margin="12,39,0,0" Name="comboBox1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" >
            <ComboBox.Items>
                <ComboBoxItem>한라산</ComboBoxItem>
                <ComboBoxItem>백두산</ComboBoxItem>
                <ComboBoxItem>무학산</ComboBoxItem>
            </ComboBox.Items>
        </ComboBox>
        <ComboBox Grid.Column="1" Height="23" Margin="12,39,0,0" Name="comboBox2" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" IsDropDownOpen="True">
            <ComboBox.Items>
                <ComboBoxItem>한라산</ComboBoxItem>
                <ComboBoxItem>백두산</ComboBoxItem>
                <ComboBoxItem>무학산</ComboBoxItem>
            </ComboBox.Items>
        </ComboBox>
    </Grid>
</Window>
