<Window x:Class="WPFControls.SliderSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SliderSample" Height="300" Width="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Slider Name="slider1" Width="200" 
        Orientation="Horizontal" HorizontalAlignment="Left" 
        IsSnapToTickEnabled="True" Minimum="1" Maximum="9" 
        TickPlacement="BottomRight"  TickFrequency="3"
        AutoToolTipPrecision="2" AutoToolTipPlacement="BottomRight"
        IsDirectionReversed="False"
        IsMoveToPointEnabled="False"/>

        <TextBlock Text="{Binding ElementName=slider1 , Path=Value}" TextAlignment="Center"></TextBlock>
    </StackPanel>
</Window>
