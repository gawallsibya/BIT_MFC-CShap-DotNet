<Window x:Class="WPFControls.GridSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GridSample" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="103*" />
            <ColumnDefinition Width="175*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="102*" />
            <RowDefinition Height="70*" />
            <RowDefinition Height="90*" />
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="1" Fill="Beige" Grid.RowSpan="2"  Name="rectangle1" Stroke="Black" />
        <Rectangle Grid.ColumnSpan="2"  Name="rectangle2" Stroke="Black" Fill="Aqua"/>
        <Rectangle Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"  Name="rectangle3" Stroke="Black" Fill="Bisque"  />
    </Grid>
</Window>
