<Window x:Class="ContentModelDemo.ItemsControlModelSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ItemsControlModelSample" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="222*" />
            <RowDefinition Height="40*" />
        </Grid.RowDefinitions>
        <ListBox Name="listBox1" Margin="12,12,0,0" HorizontalAlignment="Left" Width="200" Height="190" VerticalAlignment="Top">
            <ListBox.Items>
                <ListBoxItem>Apple</ListBoxItem>
                <ListBoxItem>Banna</ListBoxItem>
                <ListBoxItem>PineApple</ListBoxItem>
            </ListBox.Items>
        </ListBox>
        <StatusBar Height="31" Grid.RowSpan="2" VerticalAlignment="Bottom">
            <StatusBar.Items>
                <Button>Hello</Button>
                <Button>WPF</Button>
            </StatusBar.Items>
        </StatusBar>
    </Grid>
</Window>
