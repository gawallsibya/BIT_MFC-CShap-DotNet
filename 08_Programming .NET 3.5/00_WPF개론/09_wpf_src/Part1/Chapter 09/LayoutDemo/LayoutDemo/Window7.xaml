<Window x:Class="LayoutDemo.Window7"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window7" Height="360" Width="695">
    <UniformGrid Height="290" Rows="2" Columns="3" VerticalAlignment="Top" Width="400" 
>
        <UniformGrid.Resources>
            <Style  TargetType="Image">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.5"></Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </UniformGrid.Resources>
        <Image Source="images/img1.jpg"/>
        <Image Source="images/img2.jpg"/>
        <Image Source="images/img3.jpg"/>
        <Image Source="images/img4.jpg"/>
        <Image Source="images/img5.jpg"/>
       
    </UniformGrid>
</Window>
