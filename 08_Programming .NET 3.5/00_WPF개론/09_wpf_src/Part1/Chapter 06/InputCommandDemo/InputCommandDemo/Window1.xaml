<Window x:Class="InputCommandDemo.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Window1" Height="300" Width="300">
    <Canvas>
        <Canvas.CommandBindings>
            <CommandBinding Command="ApplicationCommands.Close" Executed="CommandBinding_Executed"></CommandBinding>
        </Canvas.CommandBindings>
        <Button Command="ApplicationCommands.Close" Height="96" Canvas.Left="36" Canvas.Top="40" Width="104">Close</Button>
    </Canvas>
</Window>
